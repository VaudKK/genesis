<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Genesis.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Genesis.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Genesis">

    <ShellContent
        Title="Genesis"
        ContentTemplate="{DataTemplate pages:LogInPage}"
        Route="LogInPage" />

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Icon="home_icon.svg"
            Route="HomePage" />
        <ShellContent
            Title="Add"
            Icon="add_circle_icon.svg"
            ContentTemplate="{DataTemplate pages:AddContributionPage}"
            Route="AddContributionPage" />
        <ShellContent
            Title="List"
            Icon="list_icon.svg"
            ContentTemplate="{DataTemplate pages:ContributionListPage}"
            Route="ContributionListPage" />
    </TabBar>
    
    

</Shell>
