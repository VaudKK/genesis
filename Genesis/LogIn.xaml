<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Genesis.LogIn"
             xmlns:viewModel="clr-namespace:Genesis.ViewModels"
             x:DataType="viewModel:LoginViewModel"
             Title="LogIn">
    <Grid RowDefinitions="0.2*,0.2*,0.2*,0.2*,Auto"
              VerticalOptions="Center"
              Padding="50"
              RowSpacing="15">
        <Image Source="sda_logo.png"/>
        <Label Grid.Row="1"
                   Text="KCY Genesis Beta"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        <Entry Grid.Row="2" Placeholder="Email Or PhoneNumber"
                   Text="{Binding Identifier}"
                   Keyboard="Text"
                   IsTextPredictionEnabled="True"/>
        <Entry Grid.Row="3"
                    Placeholder="Password"
                    Text="{Binding Password}"
                    IsPassword="True"/>
        <Button
                    Grid.Row="4"
                    Margin="0,30,0,0"
                    Text="Sign In"
                    IsEnabled="{Binding IsLoginEnabled}"
                    Command="{Binding LogInCommand}"/>
    </Grid>
</ContentPage>